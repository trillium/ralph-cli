{
  "name": "ralph-cli",
  "version": "0.5.0",
  "description": "Ralph CLI - Autonomous Development Loop System",
  "type": "module",
  "main": "tools/ralph.ts",
  "bin": {
    "ralph-mcp": "./tools/mcp-server.ts"
  },
  "exports": {
    ".": "./tools/ralph.ts",
    "./tools/ralph": "./tools/ralph.ts",
    "./mcp-server": "./tools/mcp-server.ts",
    "./agents/*": "./agents/*",
    "./commands/*": "./commands/*"
  },
  "files": [
    "tools",
    "agents",
    "commands",
    "README.md",
    "AGENTS.md",
    "QUICK_SETUP.md",
    "FOR_OTHER_AGENT.md",
    "RALPH-OVERVIEW.md",
    "ACTIVE_ARCHIVE_WORKFLOW.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "bunx vitest",
    "test:watch": "bunx vitest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "cli",
    "autonomous",
    "development",
    "opencode",
    "prd",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trillium/ralph-cli.git"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@opencode-ai/plugin": "^1.1.40",
    "zod": "^3.25.1"
  }
}
